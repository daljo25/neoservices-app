<?xml version='1.0' encoding='utf-8'?>
<widget id="com.daljo25.neoservices" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Neoservices</name>
    <description>
        App oficial de Neoservices.com.ve y Neoservices.cl
    </description>
    <author email="daljomar.morillo@gmail.com" href="https://daljomarmorillo.com.ve">
        Daljo25
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="25" />
    <plugin name="cordova-plugin-battery-status" source="npm" spec="~1.2.4" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.6" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.3" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.4.3" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.7.1" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.5" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <splash src="splash.png" />
    <platform name="android">
        <icon density="ldpi" src="www/res/icon/android/neoservices-ldpi-icon.png" />
        <icon density="mdpi" src="www/res/icon/android/neoservices-mdpi-icon.png" />
        <icon density="hdpi" src="www/res/icon/android/neoservices-hdpi-icon.png" />
        <icon density="xhdpi" src="www/res/icon/android/neoservices-xhdpi-icon.png" />
        <icon density="xxhdpi" src="www/res/icon/android/neoservices-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/neoservices-xxxhdpi-icon.png" />
        <splash density="land-ldpi" src="www/res/screen/android/neoservices-land-ldpi-screen.png" />
        <splash density="land-mdpi" src="www/res/screen/android/neoservices-land-mdpi-screen.png" />
        <splash density="land-hdpi" src="www/res/screen/android/neoservices-land-hdpi-screen.png" />
        <splash density="land-xhdpi" src="www/res/screen/android/neoservices-land-xhdpi-screen.png" />
        <splash density="land-xxhdpi" src="www/res/screen/android/neoservices-land-xxhdpi-screen.png" />
        <splash density="land-xxxhdpi" src="www/res/screen/android/neoservices-land-xxxhdpi-screen.png" />
        <splash density="port-ldpi" src="www/res/screen/android/neoservices-port-ldpi-screen.png" />
        <splash density="port-mdpi" src="www/res/screen/android/neoservices-port-mdpi-screen.png" />
        <splash density="port-hdpi" src="www/res/screen/android/neoservices-port-hdpi-screen.png" />
        <splash density="port-xhdpi" src="www/res/screen/android/neoservices-port-xhdpi-screen.png" />
        <splash density="port-xxhdpi" src="www/res/screen/android/neoservices-port-xxhdpi-screen.png" />
        <splash density="port-xxxhdpi" src="www/res/screen/android/neoservices-port-xxxhdpi-screen.png" />
    </platform>
    
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="50000"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="whatsapp:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
